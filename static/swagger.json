{
  "openapi": "3.0.0",
  "info": {
    "title": "Proyecto REST, Computacion paralela y distribuida, SEC 411, 2 Sem. 2023",
    "description": "Pablo Garcia Urzua",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/ejemplo": {
      "get": {
        "summary": "Obtener un ejemplo",
        "description": "Obtiene un ejemplo de la API.",
        "responses": {
          "200": {
            "description": "Respuesta exitosa",
            "content": {
              "application/json": {
                "example": {
                  "mensaje": "Este es un ejemplo."
                }
              }
            }
          }
        }
      }
    },
    "/otro-ejemplo": {
      "post": {
        "summary": "Crear un ejemplo",
        "description": "Crea un ejemplo en la API.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mensaje": {
                    "type": "string",
                    "example": "Este es un ejemplo."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Recurso creado exitosamente"
          }
        }
      }
    },
    "/ejemplos": {
      "get": {
        "summary": "Obtener ejemplos",
        "description": "Obtiene una lista de ejemplos en la API.",
        "responses": {
          "200": {
            "description": "Respuesta exitosa",
            "content": {
              "application/json": {
                "example": [
                  { "mensaje": "Ejemplo 1" },
                  { "mensaje": "Ejemplo 2" }
                ]
              }
            }
          }
        }
      }
    }
  }
}


